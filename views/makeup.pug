extends layout 

block content 
    h1 #{makeup.prodName} 
    h3 Rating: #{makeup.rating}/5 Stars
    h3 Type of Product:  #{makeup.type}
    h3 Review: #{makeup.review}

    h4 UserName: #{user.username}
    br
    br
    if user
        if user._id == makeup.posted_by
            a(href="/app/edit/" + makeup._id, class='btn') Edit
            a(href="/app/delete/" + makeup._id) Delete
